<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:id="@+id/constraint_log"
    android:background="@drawable/splash_gradient"
    tools:context="id.yuktanding.yuktanding.SignUp">

    <ImageView
        android:id="@+id/logo_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/yuklogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/txt_msk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/masuk_dengan"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="270dp"
        app:layout_constraintTop_toBottomOf="@+id/logo_log"/>

    <com.google.android.gms.common.SignInButton
        android:id="@+id/g_signin_log"
        style="@style/tombol"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_edittext"
        app:layout_constraintTop_toBottomOf="@+id/txt_msk"/>

    <Button
        android:id="@+id/btn_Login"
        style="@style/tombol"
        android:backgroundTint="@color/oren"
        android:drawableStart="@drawable/ic_phone_android"
        android:drawablePadding="16dp"
        android:text="@string/login"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_edittext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/g_signin_log"/>


</android.support.constraint.ConstraintLayout>